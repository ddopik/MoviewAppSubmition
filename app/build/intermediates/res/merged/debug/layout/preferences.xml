<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="200dp"
     android:layout_width="200dp">


    <PreferenceCategory android:title="@string/pref_update_setting" >




        <ListPreference
        android:key="prefOrderbyPref"
        android:entries="@array/OrderbyEntries"
        android:summary="@string/pref_OrderbySummary"
        android:entryValues="@array/OrderbyPrefValues"
        android:title="@string/prefOrderbyTitle" />



        <ListPreference
            android:key="prefViewByFrequency"
            android:entries="@array/ViewByEntries"
            android:summary="@string/pref_ViewBySummary"
            android:entryValues="@array/viewByPrefValues"
            android:title="@string/prefViewByTitle" />





    </PreferenceCategory>


</PreferenceScreen>